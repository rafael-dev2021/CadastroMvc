@model LoginViewModel

<form asp-controller="Account" asp-action="Login" method="post" style="max-width:400px" class="mx-auto mt-5">
    <input type="hidden" asp-for="ReturnUrl" />

    <h5>Acesse sua conta com seu email</h5>
    <br />
    <div class="form-group">
        <input asp-for="Email" placeholder="Insira seu email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input asp-for="Password" placeholder="Insira sua senha" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />
    <div>
        <button type="submit" style="width:400px; height:40px" class="btn btn-dark">Login</button>
        &nbsp;
        <a style="width:400px; height:40px" asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary">
            Cadastre-se
        </a>
    </div>
    <br />
    <p>
        Ao fazer login voçê concorda com nossa 
        <a asp-controller="Home" asp-action="Privacy">
            Politica de privacidade 
        </a>
        e 
        <a asp-controller="Home" asp-action="Termo">
            nosso termos.
        </a>
    </p>
</form>

        @section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }